                                            <td>4</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#detallesLibroModal">Detalles</button>
                                                <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editarLibroModal">Editar</button>
